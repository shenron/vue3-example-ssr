{
  "name": "vue3-tsx",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test:unit": "vue-cli-service test:unit",
    "build:client": "vue-cli-service build --dest dist/client",
    "build:server": "SSR=1 vue-cli-service build --dest dist/server",
    "build": "rm -rf ./dist && npm run build:client && npm run build:server",
    "check-types": "tsc --noemit",
    "lint": "vue-cli-service lint && npm run check-types",
    "serve": "vue-cli-service serve",
    "pressr": "npm run build",
    "ssr": "ts-node server.ts",
    "ssr:dev": "ts-node server.ts"
  },
  "dependencies": {
    "@vue/server-renderer": "^3.0.6",
    "axios": "^0.21.1",
    "core-js": "^3.9.0",
    "express": "^4.17.1",
    "serialize-javascript": "^5.0.1",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0",
    "vuex": "^4.0.0",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/serialize-javascript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@vue/cli-plugin-babel": "^4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-router": "^4.5.11",
    "@vue/cli-plugin-typescript": "^4.5.11",
    "@vue/cli-plugin-unit-jest": "^4.5.11",
    "@vue/cli-service": "^4.5.11",
    "@vue/compiler-sfc": "^3.0.6",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.6.0",
    "lint-staged": "^10.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2",
    "vue-jest": "^3.0.7",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-node-externals": "^2.5.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
